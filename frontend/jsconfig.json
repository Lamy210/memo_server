{
	"compilerOptions": {
	  "baseUrl": ".",
	  "paths": {
		"@/*": ["./src/*"],
		"@lib/*": ["./src/lib/*"],
		"@utils/*": ["./src/lib/utils/*"],
		"@components/*": ["./src/components/*"]
	  },
	  "target": "esnext",
	  "module": "esnext",
	  "moduleResolution": "bundler",
	  "allowJs": true,
	  "checkJs": true,
	  "esModuleInterop": true,
	  "preserveValueImports": true,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "strict": true
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
  }